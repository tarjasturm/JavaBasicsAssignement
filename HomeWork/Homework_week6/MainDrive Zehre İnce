	        System.out.println("Soyad: " + z.soyisim);
	        System.out.println("Üniversite " + z.uni);
	        System.out.println("Bölüm: " + z.bolum);
	        System.out.println("Yaş " + z.yas);
	        System.out.println("Saç rengi: " + z.sacrengi);
	        System.out.println("Boy: " + z.boy);
	        System.out.println("Kilo: " + z.kilo);
	        if (z.biyik){
	        	System.out.println("Bıyık var");
	        	
	        }
	        else {
	        	System.out.println("Bıyık yok" );
	        }
